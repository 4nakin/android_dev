<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Simple Search -->

    <Button
        android:id="@+id/search"
        style="@style/FreebaseButton"
        android:layout_alignParentLeft="true"
        android:layout_margin="40dp"
        android:drawableTop="@drawable/selector_button"
        android:text="Search" >
    </Button>

    <!-- Explorer -->

    <Button
        android:id="@+id/explorer"
        style="@style/FreebaseButton"
        android:layout_alignParentRight="true"
        android:layout_margin="40dp"
        android:drawableTop="@drawable/selector_button"
        android:text="Explore" >
    </Button>

    <!-- Advanced Search -->

    <Button
        android:id="@+id/searchAdvanced"
        style="@style/FreebaseButton"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="40dp"
        android:drawableTop="@drawable/selector_button"
        android:text="Advanced Search" >
    </Button>

    <!-- UNDER CONSTRUCTION -->

    <ImageView
        android:id="@+id/under02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="40dp"
        android:src="@drawable/under_construction" >
    </ImageView>

    <!-- UNDER CONSTRUCTION -->

    <ImageView
        android:id="@+id/under03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="40dp"
        android:src="@drawable/under_construction" >
    </ImageView>

    <!-- UNDER CONSTRUCTION -->

    <ImageView
        android:id="@+id/under04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="40dp"
        android:src="@drawable/under_construction" >
    </ImageView>

</RelativeLayout>